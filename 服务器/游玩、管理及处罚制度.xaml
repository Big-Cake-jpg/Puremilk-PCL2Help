           <TextBlock TextWrapping="Wrap" Margin="0,0,0,4" LineHeight="17"
                  Text="本条例自 2021 年 8 月 5 日起执行"/>
           <local:MyHint Text="本条例最终解释权由 Puremilk 管理人员所有" IsWarn="False"/>
